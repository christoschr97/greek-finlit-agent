# Financial Literacy Agent Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# Ollama Configuration
# =============================================================================

# Ollama server base URL
# Default: http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434

# Ollama model to use
# Available options: gemma3:12b, gemma3:7b, llama3.2:8b
# Default: gemma3:12b
OLLAMA_MODEL=gemma3:12b

# Ollama request timeout in seconds
# Default: 30
OLLAMA_TIMEOUT=30

# =============================================================================
# Agent Configuration
# =============================================================================

# Maximum number of iterations for agent reasoning
# Default: 10
AGENT_MAX_ITERATIONS=10

# Temperature for model responses (0.0-2.0)
# Lower values = more focused, higher values = more creative
# Default: 0.7
AGENT_TEMPERATURE=0.7

# Enable web search capabilities
# Options: true, false, 1, 0, yes, no, on, off
# Default: true
AGENT_ENABLE_SEARCH=true

# Enable calculation capabilities
# Options: true, false, 1, 0, yes, no, on, off
# Default: true
AGENT_ENABLE_CALCULATIONS=true

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Log format string
# Default: %(asctime)s - %(levelname)s - %(message)s
LOG_FORMAT=%(asctime)s - %(levelname)s - %(message)s

# =============================================================================
# Advanced Configuration Examples
# =============================================================================

# Example: Use a remote Ollama server
# OLLAMA_BASE_URL=http://192.168.1.100:11434

# Example: Use a smaller model for faster responses
# OLLAMA_MODEL=gemma3:7b

# Example: Debug mode with verbose logging
# LOG_LEVEL=DEBUG

# Example: Disable search for offline usage
# AGENT_ENABLE_SEARCH=false

# Example: More creative responses
# AGENT_TEMPERATURE=1.2

# Example: Longer timeout for slow connections
# OLLAMA_TIMEOUT=60
